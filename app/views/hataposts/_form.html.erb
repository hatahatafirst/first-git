 <aside class="col-md-4">
            
<%= form_for(hatapost) do |f| %>

            <%= render 'layouts/error_messages', model: hatapost %>

            <div class="form-group">
                
                <%= f.label :content, '今なにしてる？(140文字以内)' %>

