<% if users.any? %>

    <ul class="media-list">
        
        <% users.each do |user| %>

            <li class="row">
                <div class="col-md-3">
                    <%= image_tag user.image.to_s, class: "img-responsive" %>
                </div>
                <div class="col-md-7">
                    <h4>
                    
                        <%= user.name %>
                    
                    </h4>
                    <div>
                        <% if current_user.admin? %>
                        <%= link_to "削除", user, method: :delete, data: {confirm: 'You sure?'} %>
                        <% end %>
                    </div>
                    <div>
                    <p>
                        <%= link_to 'プロフィール', user_path(user) %>
                    </p>
                    </div>
                </div>
            </li>
        
<% end %>
        
    </ul>

<%= paginate users %>

<% end %>